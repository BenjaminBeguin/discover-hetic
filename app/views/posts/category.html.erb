<h1 class="title-main">Daily discover - <%= @category.label.upcase %></h1>
<section>
	<%= render "shared/top_post" %>
</section>

<div class="col-100 posts-list">
	<h1 class="title-second">Les posts</h1>
	<div class="sort-by">
		<%= link_to "NEWEST", category_path, class: order_by_class_for("") %>
		<span>/</span>
		<%= link_to "TOP", category_path(:orderby => "top" ), class: order_by_class_for("top") %>
	</div>
	<section>
		<%= render "shared/posts_list" %>
		<%= will_paginate @posts %>
	</section>
</div>









<%= render "shared/user_info" %>

<div class="posts-list">
	<h2 class="title-second"><%= @user.name %>'s posts</h2>
	<div class="sort-by">
		<% if @user.id == current_user.id %>
			<%= link_to "MY POST", users_posts_path, class: order_by_class_for_user("") %>
			<span>/</span>
			<%= link_to "MY LIKES", users_posts_path(:mypost => "voted" ), class: order_by_class_for_user("voted") %>
		<% end %>
	</div>
	
	<section>
		<%= render "shared/posts_list" %>
		<%= will_paginate @posts %>
	</section>
</div>






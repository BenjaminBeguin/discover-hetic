<h1>Form for edit a post</h1>

<h3>Is secure, you can only modifie your post or u ll be redirect</h3>

<%= @post.title %>

<%= form_for @post , :url => posts_update_path(id: @post.id) do |f| %>
    <%= @post.errors.full_messages.join(",") %>
    
    <div class="field">
        <%= f.label :title, 'Discover title' %><br />
        <%= f.text_field :title, autofocus: true %>
    </div>

    <div class="field">
        <%= f.label :content, 'Description' %><br />
        <%= f.text_field :content, autofocus: true %>
    </div>

    <div class="field">
        <p>Upload an image</p>
        <div class="file-input-field">
            <div class="file-input">
                <%= f.label :asset, 'Drag and drop your file or click to upload' %>
                <%= f.file_field :asset, autofocus: true %>
            </div>

            <span class="current-image" style="background-image: url(<%= @post.asset.url%>);"></span>
        </div>
    </div>

    <div class="field">
        <%= f.label "category", 'Theme' %><br />
        <%= f.collection_select :category_id, @categories, :id, :label  %>
    </div>

    <div class="field">
        <%= f.label :url, 'Website Url' %><br />
        <%= f.text_field :url, autofocus: true %>
    </div>

    <div class="field">
        <%= f.hidden_field :id  %>
    </div>

  <%= f.submit %>
 <% end %>





<%= link_to "Back", :back %>

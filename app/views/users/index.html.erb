<h1>List of Users</h1>
<div>
	<% if @connected %>

	  	<%= button_to "sign out", destroy_user_session_path, method: :delete %>
	<% end %>
</div>

<% @users.each do |user| %>
	<li>
		<%= image_tag(user.avatar.url(:thumb)) %> ->
		<%= user.name %>
		<%= user.id %>
		<%= link_to "View profils", posts_by_user_path(:slug => user.slug) %>
	</li>

<% end %>


<% if @top_post %>
	
	<div class="post-single top-post">
		<div class="post-picture">
			<%= image_tag @top_post.asset.url(:medium) %>
		</div>

		<% if user_signed_in? %>
			<%= link_to posts_add_vote_path(id: @top_post.id ), method: :post,  :remote => true, :class => "post-likes" do %>
				<% if @post_voted.include?(@top_post.id) %>
        	<img src='/assets/images/icons/like_active.png' alt="">
        <% else %>
        	<img src='/assets/images/icons/like_inactive.png' alt="">
       	<% end %>

        <%= @top_post.vote %>
      <% end %>	
		<% end %>

		<div class="post-content">
			<span class="post-cat"><%= @top_post.category.label %></span>
			<h2 class="post-title"><%= @top_post.title %></h2>
			<a href="<%= @top_post.url %>" target="_blank" class="post-link">
				<img src="/assets/images/icons/link.png" alt="">
			</a>
			<p class="post-desc">
				<%= truncate(strip_tags(@top_post.content), :length=>200)%>
			</p>
		</div>

		<a href="/users/<%= @top_post.user.name %>" class="post-author">
			<%
				if @top_post.user %>
					<img src="<%= @top_post.user.avatar.url(:thumb) %>">
					<span class="user-name"><%= @top_post.user.name %></span>					
			<%
				else
					%><span>User doesn't exist</span><%
				end
			 %>
		</a>
	</div>

<% else %>	
	Pas de post du jour pour le moment, revenez plus tard
<% end %>
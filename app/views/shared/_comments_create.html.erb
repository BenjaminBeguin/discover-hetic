<% if user_signed_in? %>
	<div class="comments-create">
		<%= image_tag current_user.avatar, class:"comments-avatar" %>
		<%= form_for([@post, @post.comments.build]) do |f| %>
		 	<div class="form-fields">
	        <%= f.text_area :message, size: "24x6" %>
	        <%= f.submit "Create" %>
	    </div>
		<% end %>
	</div>
<% end %>

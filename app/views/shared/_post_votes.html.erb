<% if user_signed_in? %>
    <%= link_to posts_add_vote_path(id: post.id ), method: :post,  :remote => true, :class => "post-likes" do %>
        <% if @post_voted.include?(post.id) %>
            <img src='/assets/images/icons/like_active.png' alt="">
        <% else %>
            <img src='/assets/images/icons/like_inactive.png' alt="">
        <% end %> 
        <%= post.vote %>  
    <% end %> 
<% else %>
    <%= link_to new_user_session_path(id: post.id ), method: :post, :class => "post-likes" do %>
        <img src='/assets/images/icons/like_inactive.png' alt="">
    <% end %>
    <%= post.vote %>  
<% end %>
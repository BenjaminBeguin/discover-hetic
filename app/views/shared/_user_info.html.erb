<section class="user-profile-card">
	<% if current_user %>
		<% if @user.id == current_user.id %>
			<%= link_to edit_user_registration_path, method: :get, :class=>'edit-button' do %>
				<img src="/assets/images/icons/pencil.svg" alt="">
			<% end %>
		<% end %>
	<% end %>
	
	<div class="profile-card-content">
		<% if @user.avatar.blank? %>
			<span class="avatar" style="background-image: url(/images/original/missing<%= @user.id.to_s.split('').last %>.png);"></span>
		<% else %>
			<span class="avatar" style="background-image: url(<%= @user.avatar %>);"></span>
		<% end %>
		<h1><%= @user.name %></h1>
		<p><%= @user.desc %></p>
	</div>
</section>
<section class="post-single post-single-view">
	<div class="post-datas">
		<a href="/users/<%= @post.user.slug %>" class="post-author">
			<%
				if @post.user %>
					<img src="<%= @post.user.avatar.url(:thumb) %>">
					<div class="author-data">
						<span class="user-name"><%= @post.user.name %></span>					
					</div>
			<%
				else
					%><span>User doesn't exist</span><%
				end
			 %>
		</a>
		<div class="post-metadatas">
			<div class="post-link">
				<a href="<%= @post.url %>" target="_blank" class="post-link">
					<img src="/assets/images/icons/link.svg" alt="">
					<span>Discover</span>
				</a>
			</div>
			<div class="post-comments">
				<a href="#comments" class="post-comments">
					<img src="/assets/images/icons/comment.svg" alt="">
					<span><%= @post.comments.count %></span>
				</a>
			</div>

			
			
		</div>
	</div>
	<h1 class="post-title"><%= @post.title %></h1>
</section>

	<%= image_tag @post.asset.url %>

	<div>Content : <%= @post.content %></div>
	<div>url : <%= @post.url %></div>
	<div>author : <%
		if @post.user
			concat @post.user.name
		else
			concat "user deleted"
		end
	 %>
	 	
	</div>
	<div>category : <%= @post.category.label %></div>
	<%	if @post.is_my_post? %>
	<%= link_to "Edit", users_posts_id_path(:id => @post.id), method: :get  %> <br><br>
	<% end %>
	
	<%= render 'shared/comments_create' %>
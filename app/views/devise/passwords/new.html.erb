<h2 class="title-second">Forgot your password ?</h2>

<section class="forgotten-password-container login_wrapper">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.label :email, :class => "form_title" %>
	    <%= f.email_field :email, :class => "form_input", autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= link_to "Send me reset password instructions" %>
	  </div>

	  	<div class="additional_links"><%= link_to "Log in", new_user_session_path, method: :get %> |
		<%= link_to "Create an account", new_user_registration_path, method: :get %></div>
	<% end %>
</section>
